<tr>
  <th><span class="content"><%= product.id %></span></th>
  <th><span class="content"><%= product.name %></span></th>
  <th><span class="content"><%= product.description %></span></th>
  <th><span class="content"><%= product.price %></span></th>
  <th><%= image_tag product.up_picture.url, size: Settings.image_size %></th>
  <th><%= link_to t(".edit_product"),  edit_admin_product_path(product) %></th>
  <% if logged_in? && current_user.is_admin? %>
    <th><%= link_to t(".delete"), admin_product_path(product), method: :delete, 
      data: {confirm: t(".confirm_delete")}, remote: true, 
      class: "delete_product" %></th>
  <% end %>
</tr>
