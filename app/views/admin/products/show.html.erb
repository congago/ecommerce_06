<div class="container">
  <div class="row">
    <div class="col-sm-3">
      <div class="carousel slide" data-ride="carousel">
         <th><%= image_tag @product.up_picture.url %></th>
      </div>
    </div>
    <div class="col-sm-9">
      <div class="well">
        <p><%= @product.name %></p>
      </div>
      <div class="well">
        <p><%= @product.description %></p><hr>
        <p><%= @product.price %></p><hr>
      </div>
      <div class="well">
        <p><%= link_to t(".add_to_shopping_cart"), new_cart_path(product_id: @product.id) %></p>
      </div>
    </div>
  </div>
</div>
